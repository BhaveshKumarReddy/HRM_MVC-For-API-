@model IEnumerable<HRM_MVC.Models.EmployeesList>

@{
    ViewData["Title"] = "displayEmployees";
}
<style>

    .back-link:hover {
        background-color: #69738379;
        border: 1px solid white;
        border-radius: 5px;
        padding: 6px 11px 7px 11px;
        text-decoration: none;
    }

    th {
        color: rgb(231, 231, 231);
        font-family: Arial, Helvetica, sans-serif;
    }

    .tr-table:hover {
        background-color: lightgray;
    }

    .tr-table:hover td {
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
        color: rgb(6, 20, 82);
    }

    .open-employee {
        color: rgb(6, 20, 82);
        font-weight: bold;
        font-family: Arial, Helvetica, sans-serif;
    }

    .open-employee:hover {
        cursor: pointer;
    }

    .table-abv {
        margin: 35px 0px 0px 0px;
        padding: 0px 0px 0px 0px;
        max-height: 379px;
        overflow-y: scroll;
    }
</style>

<div>
    <a class="back-link" style="color:#ededed" asp-controller="Home" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back
    </a>
</div>
<hr />

<h4 style="color:#ededed">Employees in @ViewBag.location_name</h4>

<div style="margin:25px 0px 0px 0px">
    <a style="margin: 3px; border: 2px solid #f6f6f6; padding: 5px; border-radius: 4px; color: rgb(97, 153, 209)" asp-action="add_Employee">+ Employee</a>
</div>
@if (Model.Count() != 0)
{
 <div class="table-abv">
<table style="margin:0px; background-color: #ededed; border-radius: 7px; overflow: hidden;" class="table">
    <thead style="background-color: rgb(0, 71, 133);">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tbody-table">
        @foreach (var item in Model)
        {
            <tr class="tr-table" style="border-bottom: 2px solid black;">
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeRole)
                </td>
                <td>
                    <a asp-action="open_Employee" asp-route-id="@item.EmployeeId"><span class="open-employee">Open &#9432;</span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
}
else
{
    <h2 style="color:white;margin:25px">There are no employees!</h2>
}